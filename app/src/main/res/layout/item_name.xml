<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.txtled.gp_a209.widget.ArialRoundTextView
        android:id="@+id/atv_device_name"
        style="@style/main_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="@dimen/dp_16_x"
        android:paddingBottom="@dimen/dp_12_x"
        android:paddingTop="@dimen/dp_12_x"
        android:text="Fox"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_x"
        app:layout_constraintTop_toBottomOf="@+id/atv_device_name"
        android:background="@color/gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>